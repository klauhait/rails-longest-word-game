<%= console %>

<h1>New game</h1>
<div>
  <tr>
    <% @letters.each do |letter| %>
      <div class="card"> <%= letter %> </div>
    <% end %>
  </tr>
</div>

<form action="/score" method="post">
  <div class="form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="word">What is the longuest word you can find ?</label>
    <div class="form-inside">
      <input type="text" name="word" placeholder="Your word :">
      <button input type="submit">Play</button>
    </div>

    <% @letters.each do |letter| %>
      <input type="hidden" value="<%= letter %>" name="letters[]" />
    <% end %>
  </div>
</form>
